@page "/home"

<div class="container-fluid header-carousel px-0 mb-5">
    <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="img/image12.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-7 text-start">
                                <h1 class="display-1 text-white animated slideInRight mb-3">An AI Heart Disease Detector System</h1>
                                <p class="mb-5 animated slideInRight">Predict the likelihood of heart disease based on patient data with real-time, accurate assessments to assist healthcare professionals in early diagnosis and treatment planning. </p>
                                <a href="" class="btn btn-primary py-3 px-5 animated slideInRight">Check a Heart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="img/symptomsDiag.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-end">
                            <div class="col-lg-7 text-end">
                                <h1 class="display-1 text-white animated slideInLeft mb-3">Symptoms-To-Disease Predictor</h1>
                                <p class="mb-5 animated slideInLeft">The Symptoms-To-Disease Predictor uses machine learning to analyze a set of user-provided symptoms and predict potential diseases. By evaluating patterns in the symptoms, it offers possible diagnoses, 
                                    helping users and healthcare providers identify likely medical conditions quickly and efficiently</p>
                                <a href="" class="btn btn-primary py-3 px-5 animated slideInLeft">Predict Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

